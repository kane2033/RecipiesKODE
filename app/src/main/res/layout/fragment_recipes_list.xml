<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.kode.recipes.presentation.recipe.RecipesViewModel" />

        <variable
            name="adapter"
            type="com.kode.recipes.presentation.recipe.RecipesAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.recipe.RecipesListFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recipesRecyclerView"
            android:name=".features.loan.ui.LoansListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/def_margin"
            app:adapter="@{adapter}"
            app:items="@{viewModel.recipes}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_recipe" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
